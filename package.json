{
    "name": "lets-talk",
    "version": "0.0.0",
    "scripts": {
        "ng": "ng",
        "start": "ng serve",
        "build": "ng build --configuration production",
        "build:dev": "ng build --configuration development --watch",
        "build:dev:clean": "npm cache clean --force && ng cache clean && rimraf dist && ng build --configuration development",
        "build:dev:hosting": "ng build --configuration development-hosting",
        "test": "vitest",
        "test:ui": "vitest --ui",
        "test:run": "vitest --run",
        "test-coverage": "vitest --coverage --run",
        "test-silent": "vitest --run --reporter=silent",
        "lint": "ng lint --fix && npx stylelint \"**/*.scss\" --fix"
    },
    "private": true,
    "dependencies": {
        "@angular/animations": "~21.0.7",
        "@angular/common": "~21.0.7",
        "@angular/compiler": "~21.0.7",
