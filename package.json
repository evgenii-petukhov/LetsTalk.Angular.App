        "baseline-browser-mapping": "^2.9.13",
        "eslint": "^9.39.2",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-import": "latest",
        "eslint-plugin-jsdoc": "latest",
        "eslint-plugin-prefer-arrow": "latest",
        "google-protobuf": "^4.0.1",
        "jsdom": "^27.4.0",
        "prettier": "3.7.4",
